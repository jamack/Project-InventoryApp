<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dim_half"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/listview_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dim_half">

        <LinearLayout
            android:layout_width="@dimen/dim_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listview_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                tools:text="Product Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/listview_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_half"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceLarge"
                    tools:text="100" />

                <TextView
                    android:id="@+id/listview_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:textAppearance="?android:textAppearanceLarge"
                    tools:text="$14.95" />

                <Button
                    android:id="@+id/listview_item_sale_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim_half"
                    android:layout_weight="0"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="@string/button_sale" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>